---
import { timeline } from '@/constants/profile'
---

<footer transition:name="site-footer" transition:persist data-site-footer class="text-sm py-6 w-full">
  <div class="flex items-center justify-between">
    <button
      type="button"
      class="btn-neutral border-none bg-transparent"
      data-footer-toggle
      aria-expanded="false"
    >
      About This Site
      <i class="i-ri:expand-up-down-line" />
    </button>
    <span class="text-muted-foreground/80">2025-PRESENT Â© octohash</span>
  </div>

  <div
    class="mt-4 pt-4 border-t border-border hidden"
    data-footer-panel
  >
    <div class="timeline-container">
      {
        timeline.map(event => (
          <div
            class="mb-3 gap-4 grid grid-cols-[100px_1fr] items-baseline"
          >
            <div class="text-right">{event.date}</div>
            <div>
              <div class="font-semibold">{event.title}</div>
              <div class="mt-1" set:html={event.description} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</footer>

<script>
  import { useSiteFooter } from '@/composables/use-site-footer'

  useSiteFooter(document.querySelector<HTMLElement>('[data-site-footer]'))
</script>
